{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build Debug",
            "command": "cmake",
            "args": [
                "--build", "build", "--config", "Debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                {
                    "owner": "clang-build",
                    "fileLocation": [
                        "absolute"
                    ],
                    "applyTo": "allDocuments",
                    "source": "clang-build",
                    "pattern": {
                        "kind": "location",
                        "regexp": "^(.+?):(\\d+):(\\d+):\\s*(?:\\x1b\\[[0-9;]*m)*?(fatal\\s+error|error|warning|note)(?:\\x1b\\[[0-9;]*m)*?:\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5
                    }
                }
            ],
            "presentation": {
                "clear": true,
                "focus": false,
                "panel": "dedicated",
                "echo": true,
                "preserveTerminalName": true,
                "revealProblems": "onProblem",
                "reveal": "silent"
            }
        },
        {
            "type": "process",
            "label": "Clang Format",
            "command": "clang-format",
            "args": [
                "-i",
                "src/*.cpp",
                "-i",
                "include/*.hpp"
            ],
            "presentation": {
                "reveal": "never",
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [ ]
        }
    ]
}